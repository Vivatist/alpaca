# Application
APP_NAME=ALPACA RAG
VERSION=2.0.0
DEBUG=False
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=False

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/alpaca_rag

# Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# File Monitoring
MONITORED_PATH=/monitored_folder
SCAN_INTERVAL=20

# File Filters
FILE_MIN_SIZE=500
FILE_MAX_SIZE=5000000

# Unstructured API
UNSTRUCTURED_URL=http://localhost:9000
UNSTRUCTURED_TIMEOUT=300
UNSTRUCTURED_STRATEGY=hi_res

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=bge-m3
OLLAMA_LLM_MODEL=qwen2.5:14b
OLLAMA_TIMEOUT=120

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Background Tasks
MAX_CONCURRENT_PROCESSING=2
TASK_QUEUE_MAX_SIZE=100
PROCESSING_BATCH_SIZE=10

# Admin
ADMIN_API_KEY=your-secret-api-key-here

# Logging
LOG_LEVEL=INFO
